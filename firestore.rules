rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザー情報のアクセス制御
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 投稿のアクセス制御
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      // いいね数の更新は認証されたユーザーなら誰でも可能
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.resource.data.keys().hasOnly(['likesCount', 'updatedAt']));
    }
    
    // いいねのアクセス制御
    match /postLikes/{likeId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null && request.auth.uid == likeId.split('_')[1];
    }
    
    // 友達リクエストのアクセス制御
    match /friendRequests/{requestId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
    }
    
    // チャットルームのアクセス制御
    match /chatRooms/{roomId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.user1Id || 
         request.auth.uid == resource.data.user2Id);
      
      // チャットメッセージのアクセス制御
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // ビデオ通話予定のアクセス制御（将来実装予定）
    // 現在は match /{document=**} でカバーされているが、以下のセキュリティルールを実装予定：
    // match /videoCallSchedules/{scheduleId} {
    //   allow read, write: if request.auth != null && 
    //     (request.auth.uid == resource.data.proposerId ||
    //      request.auth.uid in resource.data.participants ||
    //      request.auth.uid in resource.data.invitedUsers);
    // }
    
    // ビデオ通話セッションのアクセス制御（将来実装予定）
    // 現在は match /{document=**} でカバーされているが、以下のセキュリティルールを実装予定：
    // match /videoCallSessions/{sessionId} {
    //   allow read, write: if request.auth != null && 
    //     (request.auth.uid == resource.data.starterId ||
    //      request.auth.uid in resource.data.participants);
    // }
    
    // その他は認証のみ
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
